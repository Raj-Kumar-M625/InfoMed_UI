@{
    ViewData["Title"] = "Page Not Found";
    Layout = null;
}

<title>@ViewData["Title"]</title>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        text-align: center;
    }

    .error-container {
        max-width: 600px;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

        .error-container h1 {
            font-size: 6em;
            margin: 0;
            color: #dc3545;
        }

        .error-container h2 {
            margin-top: 0;
            font-size: 1.5em;
            color: #343a40;
        }

        .error-container p {
            font-size: 1em;
            color: #6c757d;
        }

        .error-container a {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 1em;
            color: #ffffff;
            background-color: #007bff;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .error-container a:hover {
                background-color: #0056b3;
            }
</style>

<div class="error-container">
    <h1>404</h1>
    <h2>Page Not Found</h2>
    <p>Sorry, the page you are looking for does not exist.</p>
    <a href="/EventCrafter">Go to Homepage</a>
</div>